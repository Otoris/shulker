{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2018", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "strict": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "outDir": "build/",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "./typings/**/*"],
  "exclude": ["node_modules"]
}
